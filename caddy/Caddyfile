# DCRP Caddy Configuration with Cloudflare DNS + Let's Encrypt
{
    admin 0.0.0.0:2019
    email {$LETS_ENCRYPT_EMAIL}
    
    # Enable structured logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
}

# Wildcard certificate with Cloudflare DNS challenge
*.{$DOMAIN} {
    tls {
        dns cloudflare {$CLOUDFLARE_API_TOKEN}
        resolvers 1.1.1.1 1.0.0.1
    }
    
    # Default catchall response for unconfigured subdomains
    header Content-Type "text/html; charset=utf-8"
    respond `<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service Not Configured - {$DOMAIN}</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
